@model SalesWebMvc.Models.ViewModels.SalesRecordFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Sales Records</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SalesRecord.SellerId" class="control-label"></label>
                <select asp-for="SalesRecord.SellerId" asp-items="@(new SelectList(Model.Sellers, "Id",  "Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="SalesRecord.Amount" class="control-label"></label>
                <input asp-for="SalesRecord.Amount" class="form-control" />
                <span asp-validation-for="SalesRecord.Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SalesRecord.StatusId" class="control-label"></label>
                <select class="form-control" id="SaleStatusId" >
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                </select>
            </div>

            

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
                <a asp-action="Index">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

